<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_waimian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewfinder_mask"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/rec_ova_stroke_black"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_msg_dialog"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="留言"
            android:textColor="@color/text_color"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_gray" />


        <TextView
            android:id="@+id/et_code_msg_dialog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:gravity="top|left"
            android:padding="10dp"
            android:textColor="@color/text_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancle_msg_dailog"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="换个号码"
                android:textColor="@color/main_color"
                android:textSize="16dp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="fill_parent"
                android:background="@color/bg_gray" />

            <TextView
                android:id="@+id/tv_ensure_msg_dailog"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="继续添加"
                android:textColor="@color/text_color"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>